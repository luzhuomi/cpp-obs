flag base4

library 
  Build-Depends:        language-c, base, mtl, containers, pretty > 1.0
  Exposed-Modules:       Language.C.Obfuscate.Var
                         Language.C.Obfuscate.CFG 
                         Language.C.Obfuscate.SSA
                         Language.C.Obfuscate.CPS
                         Language.C.Obfuscate.ASTUtils
                                                  
  Buildable:              True
  Extensions:             GADTs, MultiParamTypeClasses, FunctionalDependencies, FlexibleInstances, TypeSynonymInstances, FlexibleContexts
  GHC-Options:            
  GHC-Prof-Options:       -auto-all


executable cpp-obs
  main-is:             Main.hs
  -- hs-source-dirs:      src